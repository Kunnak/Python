def count_a_e(wort):
    for buchstabe in wort:
        liste.append(buchstabe)

    count_a = 0
    count_e = 0
    for item in liste:
        if item in a:
            count_a += 1
        if item in e:
            count_e += 1
    if count_a == count_e:
        print("True")
    else:
        print("False")


wort = input ("Wort: ")
liste = []
a = ['a']
e = ['e']

count_a_e(wort)
