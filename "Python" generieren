import time

alphabet = "abcdefghijklmnopqrstuvwxyz"
liste_alpha = []
for letter in alphabet:
    liste_alpha.append(letter)

wort = "pythoo"

liste = []

endwort_liste = []

geschwindigkeit = 0.25

for buchstabe in wort:
    liste.append(buchstabe)

for item in liste_alpha:
    time.sleep(geschwindigkeit)
    if item != liste[0]:
        print(item)
    if item == liste[0]:
        endwort_liste.append(item)
        print(endwort_liste[0])
        break

for item in liste_alpha:
    time.sleep(geschwindigkeit)
    if item != liste[1]:
        print(endwort_liste[0] + item)
    if item == liste[1]:
        endwort_liste.append(item)
        break

for item in liste_alpha:
    time.sleep(geschwindigkeit)
    if item != liste[2]:
        print(endwort_liste[0]+ endwort_liste[1] + item)
    if item == liste[2]:
        endwort_liste.append(item)
        break

for item in liste_alpha:
    time.sleep(geschwindigkeit)
    if item != liste[3]:
        print(endwort_liste[0]+ endwort_liste[1] + endwort_liste[2] + item)
    if item == liste[3]:
        endwort_liste.append(item)
        break

for item in liste_alpha:
    time.sleep(geschwindigkeit)
    if item != liste[4]:
        print(endwort_liste[0]+ endwort_liste[1] + endwort_liste[2] + endwort_liste[3] + item)
    if item == liste[4]:
        endwort_liste.append(item)
        break

for item in liste_alpha:
    time.sleep(geschwindigkeit)
    if item != liste[5]:
        print(endwort_liste[0]+ endwort_liste[1] + endwort_liste[2] + endwort_liste[3] + endwort_liste[4] + item)
    if item == liste[5]:
        endwort_liste.append(item)
        break
