
def process_text_file(file_path):
    char_dict = {}

    with open(file_path, 'r', encoding='utf-8') as file:
        text = file.read()

    for char in text:
        if char in char_dict:
            char_dict[char].append(char)
        else:
            char_dict[char] = [char]

    return char_dict

# Beispielhafte Verwendung der Funktion
file_path = 'Text.txt'
char_dict = process_text_file(file_path)

# Ausgabe des WÃ¶rterbuchs (optional)
for char, char_list in char_dict.items():
    print(f"'{char}': {len(char_list)}")
